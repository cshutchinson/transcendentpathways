extends ../layout
block content
    .page-header
        h3 Musician - Performer Details
    form.form-horizontal(action='/account/UpdateMusicianDetails', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.required
            label.col-sm-3.control-label(for='performerName') Musician or Group Name
            .col-sm-7
                input.form-control(type='text', required='required', name='performerName', id='performerName', value='#{performerName}')
        .form-group.required
            label.col-sm-3.control-label(for='contactName') Contact Name
            .col-sm-7
                input.form-control(type='text', required='required', name='contactName', id='contactName', value='#{contactName}')
        .form-group.required
            label.col-sm-3.control-label(for='address1') Address Line 1
            .col-sm-7
                input.form-control(type='text', required='required', name='address1', id='address1',value='#{address1}')
        .form-group
            label.col-sm-3.control-label(for='address2') Address Line 2
            .col-sm-7
                input.form-control(type='text', name='address2', id='address2',value='#{address2}')
        .form-group.required
            label.col-sm-3.control-label(for='city') City
            .col-sm-7
                input.form-control(type='text', required='required', name='city', id='city',value='#{city}')
        .form-group.required
            label.col-sm-3.control-label(for='state') State
            .col-sm-7
                input.form-control(type='text', required='required', name='state', id='state', value='#{state}')
        .form-group.required
            label.col-sm-3.control-label(for='zipcode') Zip Code
            .col-sm-7
                input.form-control(type='number', required='required', name='zipcode', id='zipcode',value='#{zipcode}')
        .form-group.required
            label.col-sm-3.control-label(for='phone') Contact Phone Number
            .col-sm-7
                input.form-control(type='tel', required='required', name='phone', id='phone',value='#{phone}')
        .form-group.required
            label.col-sm-3.control-label(for='instruments') Instrument(s)
            .col-sm-7
                textarea.form-control(required='required', name='instruments', id='instruments', rows='5')
                    | #{instruments}
        .form-group.required
            label.col-sm-3.control-label(for='website') Website or Online Reference
            .col-sm-7
                input.form-control(type='url', required='required', name='website', id='website', value='#{website}')
        .form-group
            label.col-sm-3.control-label(for='picture') Upload Headshot / Picture
            .col-sm-7
                input.form-control(type='text', name='picture', id='picture', value='#{picture}')
        .form-group.required
            label.col-sm-3.control-label(for='biography') Short Biography Text
            .col-sm-7
                textarea.form-control(required='required', name='biography', id='biography', rows='5')
                    | #{biography}

        .form-group
            .col-sm-offset-3.col-sm-7
                button.btn.btn-success(type='submit')
                    span.ion-music-note
                    | Submit